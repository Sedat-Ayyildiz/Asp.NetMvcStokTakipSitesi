@model MvcStok.Models.Entity.TblUrunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı :</label>
        <input type="text" class="form-control" name="URUNAD" required="" placeholder="Buraya Ürün Adını Giriniz..." maxlength="50"/>
    </div>
    <div>
        <label>Marka :</label>
        <input type="text" class="form-control" name="MARKA" required="" placeholder="Buraya Markayı Giriniz..." maxlength="50"/>
    </div>
    <div>
        <label>Kategori :</label><!--UrunController Sayfasında ki Verileri DropDownList'e komutumuz ile listeledik !!!-->
        @Html.DropDownListFor(k => k.TblKategoriler.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})
    </div>
    <div>
        <label>Fiyat :</label>
        <input type="text" class="form-control" name="FIYAT" required="" placeholder="1000 TL" />
    </div>
    <div>
        <label>Stok Adet :</label>
        <input type="text" class="form-control" name="STOK" required="" placeholder="Buraya Ürün Adedini Giriniz..."/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>