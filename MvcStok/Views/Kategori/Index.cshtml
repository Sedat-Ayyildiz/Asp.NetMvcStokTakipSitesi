@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model  PagedList.IPagedList<TblKategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        <!--Kategori Tablosunda ki verilerimizi Döngü ile ktgr değişkenimize atadık ve Kategorileri Listeledik-->
        @foreach (var ktgr in Model)
        {
            <tr>
                <!--ASP.NET gibi ID'lere göre işlemler yaparız ancak ASP.NET'de ? varken burda ["et"] işareti var! -->
                <td><b>@ktgr.KATEGORIID</b></td>
                <td>@ktgr.KATEGORIAD</td>
                <td><a href="/Kategori/SİL/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Kategori/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<!--Sayfa alt kısmına sayfalar arası geçiş için UrlLink oluşturduk-->
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>